<div>
  <div class="container">
    <div class="row">
      <h1><%= @user.name %>の詳細ページ</h1>
    </div>
    <div>
      <%= render 'layouts/profile', user: @user %>
        <% if @user.is_valid == true %>
              <th>有効会員</th>
            <% else %>
              <th>退会済み</th>
            <% end %>
      
      <div class="row">
        <%= link_to "#{@user.name}のプロフィールを編集する", edit_admin_user_path(@user) %>
      </div>
      <div class="row">
        <%= link_to "ユーザー一覧ページに戻る", admin_users_path %>
      </div>
    </div>
  </div>
</div>