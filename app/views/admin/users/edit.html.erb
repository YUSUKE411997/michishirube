<div>
  <div class="container">
    <h1><%= @user.name%>の編集画面</h1>
    <div class="row">
      <div>
        <%= form_with model: [:admin,@user], local: true do |f| %>
          <div class="row form-group">
            <%= f.label "プロフィール画像" %>
            <%= f.attachment_field :profile_image %>
          </div>
          <div class="row form-group">
            <%= f.label "名前orニックネーム" %>
            <%= f.text_field :name %>
          </div>
          <div class="row form-group">
            <%= f.label "年齢" %>
            <%= f.text_field :age %>
          </div>
          <div class="row form-group">
            <%= f.label "職業" %>
            <%= f.text_field :profession %>
          </div>
          <div class="row form-group">
            <%= f.label "自己紹介" %>
            <%= f.text_area :introduction %>
          </div>
          <div class="row form-group">
            <%= f.submit '送信', class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>