<div>
  <div class="container">
    <div class="row">
      <h1>投稿詳細ページ</h1>
    </div>
    <td><%= @user.name %></td>
    <td><%= @post.type %></td>
    <td><%= @post.title %></td>
    <td><%= @post.body %></td>
    <td>コメント一覧</td>
    <td>いいねカウント</td>
    <% if @post.user == current_user %>
    <td><%= link_to "削除する", post_path(@post), method: :delete %></td>
    <% end %>
  </div>
</div>