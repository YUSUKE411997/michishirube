<div>
  <div class="container">
    <h1><%= @type_name.type %></h1>
  </div>
  <div>
      <table class="table">
        <thead>
          <tr>
            <th>ユーザー名</th>
            <th>タイトル</th>
            <th>投稿内容</th>
            <th>コメント数</th>
            <th>いいね数</th>
            <th>投稿日時</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= link_to post.user.name, user_path(post.user.id) %></td>
              <td><%= link_to post.title, post_path(post) %></td>
              <td><%= post.body %></td>
              <td><%= post.comments.count %>件</td>
              <td>💖<%= post.likes.count %></td>
              <td><%= post_created(post) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</div>