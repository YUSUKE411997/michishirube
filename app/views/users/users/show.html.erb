<div>
  <div class="container">
    <!------------------------------------マイページ---------------------------------------------->
    <% if @user == current_user %>
     <h1>マイページ</h1>
     <%= render 'profile', user: @user %>
     <%= link_to follows_user_path do %>
     <%= "フォロー一覧　#{@user.followings.count}人" %><br>
     <% end %>
     <%= link_to followers_user_path do %>
     <%= "フォロワー一覧　#{@user.followers.count}人" %><br>
     <% end %>
     <%= link_to "プロフィールを変更", edit_user_path(@user) %>
    <% else %>
    <!------------------------------------別のユーザーページ--------------------------------------->
     <h1><%= @user.name %>さんのページ</h1>
      <%= render 'profile', user: @user %>
      <%= link_to follows_user_path do %>
        <%= "フォロー一覧　#{@user.followings.count}人" %><br>
      <% end %>
      <%= link_to followers_user_path do %>
        <%= "フォロワー一覧　#{@user.followers.count}人" %><br>
      <% end %>
      <% if @user.followed_by?(current_user) %>
        <p><%= link_to "フォローを外す", user_relationships_path(@user.id), method: :delete %></p>
      <% else %>
        <p><%= link_to "フォローする", user_relationships_path(@user.id), method: :post %></p>
      <% end %>
    <% end %>
    </div>
  </div>
</div>