<div>
  <div class="container">
    <div class="row">
      <h1>フォロー一覧</h1>
    </div>
    <div>
      <table class="table">
        <thead>
          <tr>
            <th>ユーザー名</th>
            <th>自己紹介</th>
            <th>投稿数</th>
            <th>フォロー数</th>
            <th>フォロワー数</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= link_to user.name, user_path(user.id) %></td>
            <td><%= truncate(user.introduction, length:30) %></td>
            <td><%= user.posts.count %></td>
            <td><%= user.followings.count %>人</td>
            <td><%= user.followers.count %>人</td>
            <% if user != current_user %>
              <% if user.followed_by?(current_user) %>
                <td><%= link_to "フォローを外す", user_relationships_path(user.id), method: :delete %></td>
              <% else %>
                <td><%= link_to "フォローする", user_relationships_path(user.id), method: :post %></td>
              <% end %>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>