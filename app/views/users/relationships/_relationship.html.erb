<%= link_to follows_user_path do %>
  <%= "フォロー一覧　#{user.followings.count}人" %><br>
<% end %>
<%= link_to followers_user_path do %>
  <%= "フォロワー一覧　#{user.followers.count}人" %><br>
<% end %>
<% if user.followed_by?(current_user) %>
  <p><%= link_to "フォローを外す", user_relationships_path(user.id), method: :delete, remote: true %></p>
<% else %>
  <p><%= link_to "フォローする", user_relationships_path(user.id), method: :post, remote: true %></p>
<% end %>