<button>
  <%= link_to follows_user_path, class: "btn btn-light" do %>
    <%= "フォロー　#{user.followings.count}" %>
  <% end %>
</button>
<button>
  <%= link_to followers_user_path, class: "btn btn-light" do %>
    <%= "フォロワー　#{user.followers.count}" %>
  <% end %>
</button>
<% if user.followed_by?(current_user) %>
  <button>
    <%= link_to "フォローを外す", user_relationships_path(user.id), method: :delete, remote: true, class: "btn btn-danger" %>
  </button>
<% else %>
  <button>
    <%= link_to "フォローする", user_relationships_path(user.id), method: :post, remote: true, class: "btn btn-primary" %>
  </button>
<% end %>