<% if current_user.reposted?(post.id) %>
  <p>リツイート済み</p>
  <%= link_to post_repost_path(post.id, post.reposts.ids), method: :delete, remote: true do %>
    <i class="fas fa-retweet"></i>
  <% end %>
  <p><%= post.reposts.count %></p>
<% else %>
  <p><%= link_to post_reposts_path(post.id), method: :post, remote: true do %></p>
    <i class="fas fa-retweet"></i>
  <% end %>
  <p><%= post.reposts.count %></p>
<% end %>