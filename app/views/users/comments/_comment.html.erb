<h2 class="mt-5">コメント</h2>
<table class="table">
  <% comments.each do |comment| %>
    <tr>
      <td>
        <%= link_to user_path(comment.user) do %>
          <%= attachment_image_tag comment.user, :profile_image, :fill, 50, 50, fallback: "profile/no_image.jpg", size: "50x50" %><br>
          <%= comment.user.name %>
        <% end %>
      </td>
      <td><%= comment.content %></td>
    </tr>
    <tr>
      <td><%= comment_created(comment) %></td>
      <% if comment.user == current_user %>
        <td><%= link_to "コメントを削除", post_comment_path(comment.post.id,comment.id), remote: true, method: :delete %></td>
      <% end %>
    </tr>
  <% end %>
</table>
