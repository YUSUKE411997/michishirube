<div class="row header-box">
  <div class="logo">
    <%= link_to root_path,data: {"turbolinks"=>false} do %>
      <%= image_tag 'logo.jpg' %>
    <% end %>
  </div>
<% if user_signed_in? %>
  <div class="header-area">
    <li class="header-button">
      <%= link_to "マイページ", user_path(current_user.id) %>
    </li>
    <li class="header-button">
      <%= link_to "タイムライン", timelines_path %>
    </li>
    <li class="header-button">
      <%= link_to "投稿一覧", posts_path %>
    </li>
    <li class="header-button">
      <%= link_to "メッセージ", rooms_path %>
      <% if messages_false_count != 0 %>
        <span class="header-message"><%= messages_false_count %></span>
      <% end %>
    </li>
    <li class="header-button">
      <%= link_to notifications_path do %>
          通知
        <% end %>
      <% if unchecked_notifications.any? %>
          <span class="notification-count"><%= unchecked_notifications.count %></span>
      <% end %>
    </li>
    <li class="header-button">
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
    </li>
    <div>
      <%= render 'layouts/search' %>
    </div>
  </div>
<% elsif admin_signed_in? %>
  <div class="header-area">
    <li class="header-button">
      <%= link_to "ユーザー一覧", admin_users_path %>
    </li>
    <li class="header-button">
      <%= link_to "投稿一覧", admin_posts_path %>
    </li>
    <li class="header-button">
      <%= link_to "ログアウト",  destroy_admin_session_path, method: :delete %>
    </li>
    <div>
      <%= render 'layouts/admin_search' %>
    </div>
  </div>
<% else %>
  <div class="header-area">
    <li class="header-button">
      <%= link_to "投稿一覧", posts_path %>
    </li>
    <div>
      <%= render 'layouts/search' %>
    </div>
  </div>
<% end %>
</div>