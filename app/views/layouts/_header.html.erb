<h2>
    <%= link_to "ミチシルベ", root_path %>
</h2>
<% if user_signed_in? %>
  <li>
    <%= link_to "マイページ", user_path(current_user.id) %>
  </li>
  <li>
    <%= link_to "タイムライン", timeline_user_path(current_user.id) %>
  </li>
  <li>
    <%= link_to "投稿一覧", posts_path %>
  </li>
  <li>
    <%= link_to "メッセージ", rooms_path %>
    <%= messages_false_count %>
  </li>
  <li>
    <% if unchecked_notifications.any? %>
      <%= link_to notifications_path do %>
        通知
        <!--<i class="fas fa-exclamation"></i>-->
        <span class="notification-count"><%= unchecked_notifications.count %></span>
      <% end %>
    <% else %>
      <%= link_to notifications_path do %>
        通知
      <% end %>
    <% end %>
  </li>
  <li>
    <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
  </li>
  <div>
    <%= render 'layouts/search' %>
  </div>
<% elsif admin_signed_in? %>
  <li>
    <%= link_to "ユーザー一覧", admin_users_path %>
  </li>
  <li>
    <%= link_to "投稿一覧", admin_posts_path %>
  </li>
  <li>
    <%= link_to "ログアウト",  destroy_admin_session_path, method: :delete %>
  </li>
  <div>
    <%= render 'layouts/admin_search' %>
  </div>
<% else %>
  <li>
    <%= link_to "投稿一覧", posts_path %>
  </li>
  <li>
    <%= link_to "新規登録", new_user_registration_path %>
  </li>
  <li>
    <%= link_to "ログイン", new_user_session_path %>
  </li>
  <div>
    <%= render 'layouts/search' %>
  </div>
<% end %>